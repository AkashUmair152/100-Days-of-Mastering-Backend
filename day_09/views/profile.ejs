<!-- views/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Profile</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #121212;
      color: #e0e0e0;
      line-height: 1.6;
      padding: 20px;
      min-height: 100vh;
    }

    .container {
      max-width: 500px;
      margin: 60px auto;
      padding: 40px;
      background-color: #1e1e1e;
      border-radius: 14px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
      border: 1px solid #333;
      text-align: center;
    }

    h1 {
      color: #bbdefb;
      margin-bottom: 16px;
      font-size: 28px;
    }

    .info {
      margin: 25px 0;
      text-align: left;
      background-color: #2d2d2d;
      padding: 16px;
      border-radius: 8px;
      font-size: 15px;
    }

    .info p {
      margin-bottom: 12px;
      color: #eeeeee;
    }

    .info span {
      color: #90caf9;
      font-weight: 500;
    }

    button {
      padding: 12px 24px;
      background-color: #d32f2f;
      color: white;
      font-size: 15px;
      font-weight: 600;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #b71c1c;
    }

    .logout-form {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Welcome, <span><%= userName %></span>!</h1>

    <div class="info">
      <p><strong>Email:</strong> <span><%= email %></span></p>
      <p><strong>Username:</strong> <span><%= userName %></span></p>
      <p><strong>Age:</strong> <span><%= age %></span></p>
    </div>

    <div class="logout-form">
      <form action="/logout" method="POST">
        <button type="submit">Logout</button>
      </form>
    </div>
  </div>
</body>
</html>